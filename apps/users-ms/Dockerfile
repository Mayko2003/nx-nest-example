# Run the container with `docker run -p 3000:3000 -t users-ms`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system users-ms && \
          adduser --system -G users-ms users-ms

COPY dist/apps/users-ms users-ms/
RUN chown -R users-ms:users-ms .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix users-ms --omit=dev -f install

CMD [ "node", "users-ms" ]
